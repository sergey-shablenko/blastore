{
  "name": "blastore",
  "version": "3.0.1",
  "description": "Blazing-fast, type-safe keyâ€“value storage wrapper with minimal overhead.",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergey-shablenko/blastore.git"
  },
  "keywords": [
    "storage",
    "typed",
    "localStorage",
    "asyncStorage",
    "validation",
    "typescript",
    "zustand",
    "valtio",
    "redux",
    "mobx",
    "jotai",
    "fast",
    "key-value",
    "react"
  ],
  "typesVersions": {
    ">=4": {
      ".": [
        "dist/web/index.d.ts"
      ],
      "types": [
        "dist/web/types.d.ts"
      ],
      "sync": [
        "dist/web/sync.d.ts"
      ],
      "async": [
        "dist/web/async.d.ts"
      ],
      "standard": [
        "dist/web/standard.d.ts"
      ],
      "sync-memory-storage": [
        "dist/web/sync-memory-storage.d.ts"
      ],
      "async-memory-storage": [
        "dist/web/async-memory-storage.d.ts"
      ],
      "react/use-async-store": [
        "dist/web/react/use-async-store.d.ts"
      ],
      "react/use-sync-store": [
        "dist/web/react/use-sync-store.d.ts"
      ],
      "react/use-standard-store": [
        "dist/web/react/use-standard-store.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/web/index.js",
      "require": "./dist/node/index.js",
      "types": "./dist/web/index.d.ts"
    },
    "./sync": {
      "import": "./dist/web/sync.js",
      "require": "./dist/node/sync.js",
      "types": "./dist/web/sync.d.ts"
    },
    "./async": {
      "import": "./dist/web/async.js",
      "require": "./dist/node/async.js",
      "types": "./dist/web/async.d.ts"
    },
    "./standard": {
      "import": "./dist/web/standard.js",
      "require": "./dist/node/standard.js",
      "types": "./dist/web/standard.d.ts"
    },
    "./sync-memory-storage": {
      "import": "./dist/web/sync-memory-storage.js",
      "require": "./dist/node/sync-memory-storage.js",
      "types": "./dist/web/sync-memory-storage.d.ts"
    },
    "./async-memory-storage": {
      "import": "./dist/web/async-memory-storage.js",
      "require": "./dist/node/async-memory-storage.js",
      "types": "./dist/web/async-memory-storage.d.ts"
    },
    "./react/use-async-store": {
      "import": "./dist/web/react/use-async-store.js",
      "require": "./dist/node/react/use-async-store.js",
      "types": "./dist/web/react/use-async-store.d.ts"
    },
    "./react/use-sync-store": {
      "import": "./dist/web/react/use-sync-store.js",
      "require": "./dist/node/react/use-sync-store.js",
      "types": "./dist/web/react/use-sync-store.d.ts"
    },
    "./react/use-standard-store": {
      "import": "./dist/web/react/use-standard-store.js",
      "require": "./dist/node/react/use-standard-store.js",
      "types": "./dist/web/react/use-standard-store.d.ts"
    },
    "./types": {
      "require": "./dist/node/types.d.ts",
      "types": "./dist/web/types.d.ts"
    }
  },
  "files": [
    "dist/node/*",
    "dist/web/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "format": "prettier **/*.ts --write",
    "build:node": "tsc -p tsconfig.node.json",
    "build:web": "tsc -p tsconfig.web.json",
    "build": "npm run build:node && npm run build:web",
    "dev": "vite",
    "test": "vitest"
  },
  "devDependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/benchmark": "^2.1.5",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "benchmark": "^2.1.4",
    "jotai": "^2.13.0",
    "mobx": "^6.13.7",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "typescript": "^5.8.3",
    "valtio": "^2.1.5",
    "vitest": "^3.2.4",
    "zod": "^4.0.17",
    "zustand": "^5.0.6"
  }
}
