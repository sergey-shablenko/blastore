{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "benchmarks"
  ]
}
